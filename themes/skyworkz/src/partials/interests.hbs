{{#section "interests"}}
<hr>
<section id="interests">
  {{#> header-interests }}
    {{> header-icon _title="INTERESTS" _section="interests" _hdricon=(lookup . '_icon') }}
  {{/header-interests}}
  {{#each r.interests}}
    {{#> body-interests }}
    <div>
    <h3><em>{{{ name }}}</em></h3>
    <span class="tenure">{{date date 'YYYY' }}</span>
    {{{ summary }}}
    {{> highlights }}
    {{#if keywords}}<span class="keywords">{{#each keywords}}{{{ . }}} {{/each}}</span>{{/if}}    
    </div>
    {{/body-interests}}
  {{/each}}
</section>
{{/section}}
